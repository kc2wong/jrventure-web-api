{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": "./src",
    "paths": {
      "@api/*": ["api/*"],
      "@openapi/*": ["__generated__/openapi/*"],
      "@processapi/*": ["__generated__/linkedup-backend-client/*"],
      "@service/*": ["service/*"],
      "@repo/*": ["repo/*"],
      "@middlewares/*": ["middlewares/*"],
      "@shared/*": ["shared/*"],
      "@type/*": ["type/*"],
      "@util/*": ["util/*"]
    }
  },
  "exclude": ["node_modules", "cdk.out"]
}
